{
    //ファイルの自動保存の制御
    "files.autoSave": "afterDelay",
    // 1つのタブに相当するスペースの数
    "editor.tabSize": 2,
    //空白文字を表示するかどうか
    "editor.renderWhitespace": "all",
    //フォントサイズを制御
    "editor.fontSize": 16,
    //フォントファミリーを制御
    "editor.fontFamily": "'Ricty Diminished'",
    //文字間隔を制御
    "editor.letterSpacing": 1,
    "window.zoomLevel": 0,
    "editor.fastScrollSensitivity": 10,
    // emmet
    "emmet.variables": {
        "lang": "ja"
    },
    "emmet.triggerExpansionOnTab": true,
    // Autoprefixer
    "autoprefixer.browsers": [
        "> 1% in JP",
        "last 2 versions",
        "Firefox ESR",
    ],
    // Live Sass Compile
    "liveSassCompile.settings.generateMap": false,
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/dist/css/"
        }
    ],
    "liveSassCompile.settings.autoprefix": [
        "> 1% in JP", //日本で1%以上のシェアがあるブラウザ。IE10を含む。
        "last 2 version", //最新の2バージョンのブラウザ
        "Firefox ESR"
    ],
    "liveSassCompile.settings.excludeList": [
        "**/node_modules/**", //コンパイルしたくないフォルダ（除外リスト）
        ".vscode/**"
    ],
    // Live Server
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.CustomBrowser": "chrome",
    // Defining custom colors instead of default "Rainbow" for dark backgrounds.
    // (Sorry: Changing them needs an editor restart for now!)
    "indentRainbow.colors": [
        "rgba(255,255,64,0.2)",
        "rgba(127,255,127,0.2)",
        "rgba(255,127,255,0.2)",
        "rgba(79,236,236,0.2)"
    ],
    // HTML Format
    "html.format.extraLiners": "",//どのタグの前にも空行を入れたくない場合は""に指定。
    "html.format.wrapLineLength": 0,
    "html.format.indentInnerHtml": false,//headとbodyタグのインデント
    "html.format.contentUnformatted": "video,source,svg,line,pre",//再フォーマットしてほしくないタグ
    "html.format.wrapAttributes": "preserve",

    "workbench.editor.enablePreview": false, //プレビューモード禁止
    "workbench.editor.enablePreviewFromQuickOpen": false, //プレビューモード禁止
    "workbench.editor.openPositioning": "last", //エディタのタブは常に末尾に追加
    "editor.formatOnType": true,
    "explorer.autoReveal": false,
    "workbench.list.openMode": "doubleClick",
    "editor.quickSuggestions": null,
    "workbench.colorCustomizations": {},
    "customizeUI.activityBar": "bottom",
    "explorer.confirmDelete": false,
    "workbench.sideBar.location": "left",
    "highlight-matching-tag.highlightFromContent": true,
    "peacock.favoriteColors": [

        {
            "name": "Angular Red",
            "value": "#dd0531"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#61dafb"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Svelte Orange",
            "value": "#ff3d00"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "html-css-class-completion.enableEmmetSupport": true,

}